<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">

	<Appenders>
		<File name="FILE" fileName="/tmp/dineroVO.log" append="true">
			<PatternLayout
				pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss,SSS} | [%t] %C{10} (%F:%L) - %m%n" />
		</File>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss,SSS} | [%t] %C{10} (%F:%L) - %m%n" />
		</Console>
	</Appenders>

	<Loggers>
		<Logger name="com.bluephantom.dinero.model" level="debug" />
		<Logger name="com.bluephantom.dinero.vo" level="debug" />
		<Logger name="com.bluephantom.dinero.manager" level="debug" />
		<Logger name="com.bluephantom.dinero.app" level="debug" />
		<Root level="info">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="FILE" />
		</Root>
	</Loggers>

</Configuration>